<div class="container">

  <%= form_tag courses_path, method: :get, id: "select_major" do %>
    <%= grouped_collection_select(nil, :major_id, Faculty.all, :majors, :name, :id, :name, prompt: "Select a major:") %>
  <% end %>
  <div class="line"></div>
  <div class="major-name">
    <%= @major.name %>
  </div>
  <div class="courses">
    <% @courses.each do |course| %>
        <%= link_to course_path(course), class: "course-show white-box", style: "background-image: url(#{course.image_url})" do %>
          <div class="name">
            <%= course.name %>
          </div>
        <% end %>
    <% end %>
  </div>
</div>
