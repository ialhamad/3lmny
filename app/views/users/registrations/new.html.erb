<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "container white-box login-form flex-column"}) do |f| %>
  <h1>Register</h1>
  <%= devise_error_messages! %>
    <%= f.text_field :username, autofocus: true, placeholder: "username" %>
    <%= f.email_field :email, placeholder: "email" %>
    <%= f.password_field :password, autocomplete: "off", placeholder: "password" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "retype the password" %>
    <% if @minimum_password_length %>
      <em style="color: #70767b;font-size:0.8em;">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.submit "Register", class: "btn" %>
<% end %>
