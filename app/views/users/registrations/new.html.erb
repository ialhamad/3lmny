<div class="sign-in-up">
  <ul class="tabs">
    <li class="tab-link current" data-tab="tab-1">Register</li>
    <li class="tab-link" data-tab="tab-2">Login</li>
  </ul>

  <div id="tab-1" class="tab-content current">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "container white-box login-form flex-column"}) do |f| %>
      <div class="login-head">
        <h1>Join 3lmny!</h1>
        <h4>register to share your knowledge with others.</h4>
      </div>
      <div class="line"></div><br>
      <%= devise_error_messages! %>
        <%= f.text_field :username, autofocus: true, placeholder: "username", class: "username", required: "required" %>
        <%= f.email_field :email, placeholder: "email", class: "email", required: "required" %>
        <%= f.password_field :password, autocomplete: "off", placeholder: "password", class: "password", required: "required" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "retype the password", class: "password", required: "required" %>
        <% if @minimum_password_length %>
          <em style="color: #70767b;font-size:0.8em;">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.submit "Register", class: "btn" %>
    <% end %>
  </div>

  <div id="tab-2" class="tab-content">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "container white-box login-form flex-column"}) do |f| %>
      <div class="login-head">
        <h1>Hello!</h1>
        <h4>log into your account here.</h4>
      </div>
      <div class="line"></div>
      <%= devise_error_messages! %>

      <br>
      <%= f.email_field :email, autofocus: true, placeholder: "Your email", class: "username" %>
      <%= f.password_field :password, autocomplete: "off", placeholder: "Your password", class: "password" %>
      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
      <%= f.submit "Login", class: "btn" %>
    <% end %>
  </div>
</div>
