<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "container white-box login-form flex-column"}) do |f| %>
  <div class="login-head">
    <h1>Join 3lmny!</h1>
    <h4>register to share your knowledge with others.</h4>
  </div>
  <div class="line"></div><br>
  <%= devise_error_messages! %>
    <%= f.text_field :username, autofocus: true, placeholder: "username", class: "username", required: "required" %>
    <%= f.email_field :email, placeholder: "email", class: "email", required: "required" %>
    <%= f.password_field :password, autocomplete: "off", placeholder: "password", class: "password", required: "required" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "retype the password", class: "password", required: "required" %>
    <% if @minimum_password_length %>
      <em style="color: #70767b;font-size:0.8em;">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.submit "Register", class: "btn" %>
<% end %>
