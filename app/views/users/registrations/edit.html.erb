  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "white-box flex-center-around edit-user" }) do |f| %>
    <!-- <%= devise_error_messages! %> -->
    <div class="user-info-fields">
      <%= f.text_field :first_name, autofocus: true, placeholder: "الإسم الأول", class: "input-block" %>
      <%= f.text_field :last_name, placeholder: "الإسم الأخير", class: "input-block" %>
      <%= f.password_field :password, autocomplete: "off", placeholder: "تغير الرقم السري", class: "input-block" %>
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "أعد إدخال الرقم السري الجديد", class: "input-block" %>
      <%= f.password_field :current_password, autocomplete: "off", placeholder: "الرقم السري الحالي", class: "input-block", required: true %>
      <%= f.submit "حفظ", class: "btn" %>
    </div>

    <div class="user-avatar">
      <%= f.text_area :bio, class: "user-bio", placeholder: "نبذه عنك" %>
      <label for="avatar_upload" class="btn btn-block" id="avatar_label">
        إختر صورة
        <svg class="icon-image"><use xlink:href="<%= asset_path 'icons.svg' %>#icon-image"></use></svg>
      </label>
      <%= f.hidden_field :image, value: f.object.cached_image_data %>
      <%= f.file_field :image, id: "avatar_upload" %>
    </div>
  <% end %>
