<div id="login">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "container white-box login-form flex-column"}) do |f| %>
    <div class="login-head">
      <h1>Hello!</h1>
      <h4>log into your account here.</h4>
    </div>
    <div class="line"></div>
    <%= devise_error_messages! %>

    <br>
    <%= f.email_field :email, autofocus: true, placeholder: "Your email", class: "username" %>
    <%= f.password_field :password, autocomplete: "off", placeholder: "Your password", class: "password" %>
    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
    <%= f.submit "Login", class: "btn" %>
  <% end %>

  <div class="social-login flex-column">
    <div class="reg-in-login">
      <%= link_to "Forgot your password?", new_user_password_path %> |
      <%= link_to "Register", register_path %>
    </div>

    <%= link_to user_facebook_omniauth_authorize_path, class: "social-login-btn facebook-btn" do %>
      <svg class="icon-facebook-alt"><use xlink:href="<%= asset_path 'icons.svg' %>#icon-facebook-alt"></use></svg>
      <span>Login using Facebook</span>
    <% end %>
    <%= link_to user_google_oauth2_omniauth_authorize_path, class: "social-login-btn google-btn" do %>
      <svg class="icon-google-alt"><use xlink:href="<%= asset_path 'icons.svg' %>#icon-google-alt"></use></svg>
      <span>Login using Google</span>
    <% end %>
  </div>
</div>
