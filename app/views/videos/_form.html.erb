<%= form_for(video) do |f| %>
  <% if video.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% video.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <%= f.text_field :title, placeholder: "the video title" %>
    <%= f.text_field :youtube_video_id, placeholder: "youtube video id example: 7SWvDHvWXok" %>
    <%= f.collection_select :course_id, Course.all, :id, :name, prompt: "Course name:" %>
    <%= f.text_field :status, placeholder: "video status example: recorded, live ..." %>
    <%= f.submit "Publish", class: "btn" %>
    <% end %>
